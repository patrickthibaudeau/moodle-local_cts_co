<div class="container-fluid">
    <div class="row mt-2">
        <div class="col">
            <div class="float-left">
                <a href="index.php" title="{{#str}}home, local_cts_co{{/str}}"
                   class="btn btn-lg btn-outline-primary">
                    {{#str}}home, local_cts_co{{/str}}
                </a>
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="mb-3">{{#str}}details, local_cts_co{{/str}}</h3>
                    <b>{{#str}}ticket, local_cts_co{{/str}}:</b> <a href="{{halo_url}}/tickets?id={{halo_ticket_id}}" target="_blank">
                    SR-{{halo_ticket_id}}</a><br>
                    <b>{{#str}}requested_for, local_cts_co{{/str}}:</b> {{for_user}}<br>
                    <b>{{#str}}requested_by, local_cts_co{{/str}}:</b> {{by_user}}<br>
                    <b>{{#str}}date_requested, local_cts_co{{/str}}:</b> {{timecreated}}<br>
                    <b>{{#str}}due_date, local_cts_co{{/str}}:</b> {{#issue}}{{duedate_hr}}{{/issue}}<br>
                    <b>{{#str}}agent, local_cts_co{{/str}}:</b> {{#issue}}{{agent_display_name}}{{/issue}}<br>
                    <h5 class="mt-2">{{#str}}request, local_cts_co{{/str}}</h5>
                    <p>
                        {{{description}}}
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="mb-3">{{#str}}process, local_cts_co{{/str}}</h3>
                    <span class="badge {{#new_request_completed}}badge-success{{/new_request_completed}}{{^new_request_completed}}badge-info{{/new_request_completed}}">New Request</span><br>
                    <span class="badge badge-secondary">Quote Process</span><br>
                    <span class="badge badge-secondary">Order Submitted</span><br>
                    <span class="badge badge-secondary">Receiving/Inventory Stage</span><br>
                    <span class="badge badge-secondary">Order Completed</span><br>
                    <span class="badge badge-secondary">Inventory Processing</span><br>
                    <span class="badge badge-secondary">Imaging Stage</span><br>
                    <span class="badge badge-secondary">Setup /Deployment Stage</span><br>
                    <span class="badge badge-secondary">Scheduled Pickup/Shipping</span><br>
                    <span class="badge badge-secondary">Deployment Completed</span><br>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h3 class="mb-3">{{#str}}timeline, local_cts_co{{/str}}</h3>
                    <input type="hidden" id="timeline" value="{{timeline}}">
                    <div id="my-timeline"></div>
                </div>
            </div>
        </div>
    </div>

</div>