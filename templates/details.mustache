<div class="container-fluid">
    {{#is_agent}}
        <div class="row mt-2">
            <div class="col">
                <div class="float-left">
                    <a href="index.php" title="{{#str}}home, local_cts_co{{/str}}"
                       class="btn btn-lg btn-outline-primary">
                        {{#str}}home, local_cts_co{{/str}}
                    </a>
                </div>
            </div>
        </div>
    {{/is_agent}}
    <div class="row mt-2">
        <div class="col-md-12">
            <div class="card-deck">
                <div class="card">
                    <div class="card-body">
                        <h3 class="mb-3">{{#str}}details, local_cts_co{{/str}}</h3>
                        <b>{{#str}}ticket, local_cts_co{{/str}}:</b> <a href="{{halo_url}}/tickets?id={{halo_ticket_id}}
                        " target="_blank">
                        SR-{{halo_ticket_id}}</a><br>
                        <b>{{#str}}requested_for, local_cts_co{{/str}}:</b> {{for_user}}<br>
                        <b>{{#str}}date_requested, local_cts_co{{/str}}:</b> {{timecreated}}<br>
                        <b>{{#str}}agent, local_cts_co{{/str}}:</b> {{agent}}<br>
                        <h5 class="mt-2">{{#str}}request, local_cts_co{{/str}}</h5>
                        <p>
                            {{{description}}}
                        </p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h3 class="mb-3">{{#str}}process_status, local_cts_co{{/str}}</h3>
                        <span class="badge badge-{{new_request}}">New Request</span> {{#new_request_stage}}
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>{{/new_request_stage}}<br>
                        <span class="badge badge-{{quote_process}}">Quote Process</span> {{#quote_process_stage}}
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>{{/quote_process_stage}}<br>
                        <span class="badge badge-{{order_submitted}}">Order Submitted</span> {{#order_submitted_stage}}
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>{{/order_submitted_stage}}<br>
                        <span class="badge badge-{{with_supplier}}">With Supplier</span> {{#with_supplier_stage}}
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>{{/with_supplier_stage}}><br>
                        <span class="badge badge-{{order_received}}">Order Received</span> {{#order_received_stage}}
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>{{/order_received_stage}}<br>
                        <span class="badge badge-{{inventory_preperation}}">Inventory Preperation</span> {{#inventory_preperation_stage}}
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>{{/inventory_preperation_stage}}<br>
                        <span class="badge badge-{{deployment}}">Deployment</span> {{#deployment_stage}}
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>{{/deployment_stage}}<br>
                        <span class="badge badge-{{request_completed}}">Request Completed</span> {{#request_completed_stage}}
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>{{/request_completed_stage}}<br>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row mt-3">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h3 class="mb-3">{{#str}}timeline, local_cts_co{{/str}}</h3>
                    <input type="hidden" id="timeline" value="{{timeline}}">
                    <div id="my-timeline"></div>
                </div>
            </div>
        </div>
    </div>

</div>